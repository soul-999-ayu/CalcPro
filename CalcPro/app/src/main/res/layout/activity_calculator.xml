<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/btnHistory"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_history_clock"
            app:tint="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_dots"
            app:tint="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:text="0"
            android:textColor="?attr/colorOnSurface"
            android:textSize="64sp"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:scrollbars="vertical"
            android:padding="24dp"/>

        <LinearLayout
            android:id="@+id/historyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/colorSurface"
            android:visibility="gone"
            android:padding="16dp"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:paddingBottom="16dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvHistoryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No History"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="18sp"
                    android:lineSpacingExtra="8dp"/>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/btnExpand"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_expand"
        app:tint="?attr/colorOnSurfaceVariant"
        android:padding="4dp"
        android:rotation="180" />

    <GridLayout
        android:id="@+id/scientificPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3"
        android:visibility="gone"
        android:padding="8dp">

        <Button android:id="@+id/btnRoot"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="√"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnPi"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="π"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnPower"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="^"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnFact"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="!"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnRad"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="Rad" android:textSize="12sp"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnSin"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="sin" android:textSize="12sp"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnCos"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="cos" android:textSize="12sp"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnTan"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="tan" android:textSize="12sp"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnInv"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="INV" android:textSize="12sp"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnE"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="e"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnLn"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="ln" android:textSize="12sp"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>

        <Button android:id="@+id/btnLog"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="log" android:textSize="12sp"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="fill"
            android:minHeight="0dp" android:minWidth="0dp" android:padding="4dp" android:includeFontPadding="false"
            android:layout_columnWeight="1" android:layout_margin="4dp"/>
    </GridLayout>

    <LinearLayout
        android:id="@+id/numberPad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:id="@+id/btnClear" style="@style/Widget.Material3.Button.TonalButton" android:text="AC" android:textColor="?attr/colorOnSecondaryContainer" app:backgroundTint="?attr/colorSecondaryContainer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="22sp"/>
            <Button android:id="@+id/btnPara" style="@style/Widget.Material3.Button.TonalButton" android:text="( )" android:textColor="?attr/colorOnSecondaryContainer" app:backgroundTint="?attr/colorSecondaryContainer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="22sp"/>
            <Button android:id="@+id/btnPercent" style="@style/Widget.Material3.Button.TonalButton" android:text="%" android:textColor="?attr/colorOnSecondaryContainer" app:backgroundTint="?attr/colorSecondaryContainer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="22sp"/>
            <Button android:id="@+id/btnDiv" style="@style/Widget.Material3.Button.TonalButton" android:text="÷" android:textColor="?attr/colorOnTertiaryContainer" app:backgroundTint="?attr/colorTertiaryContainer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:id="@+id/btn7" style="@style/Widget.Material3.Button.TonalButton" android:text="7" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btn8" style="@style/Widget.Material3.Button.TonalButton" android:text="8" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btn9" style="@style/Widget.Material3.Button.TonalButton" android:text="9" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btnMul" style="@style/Widget.Material3.Button.TonalButton" android:text="×" android:textColor="?attr/colorOnTertiaryContainer" app:backgroundTint="?attr/colorTertiaryContainer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:id="@+id/btn4" style="@style/Widget.Material3.Button.TonalButton" android:text="4" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btn5" style="@style/Widget.Material3.Button.TonalButton" android:text="5" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btn6" style="@style/Widget.Material3.Button.TonalButton" android:text="6" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btnSub" style="@style/Widget.Material3.Button.TonalButton" android:text="-" android:textColor="?attr/colorOnTertiaryContainer" app:backgroundTint="?attr/colorTertiaryContainer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:id="@+id/btn1" style="@style/Widget.Material3.Button.TonalButton" android:text="1" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btn2" style="@style/Widget.Material3.Button.TonalButton" android:text="2" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btn3" style="@style/Widget.Material3.Button.TonalButton" android:text="3" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btnAdd" style="@style/Widget.Material3.Button.TonalButton" android:text="+" android:textColor="?attr/colorOnTertiaryContainer" app:backgroundTint="?attr/colorTertiaryContainer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
            <Button android:id="@+id/btn0" style="@style/Widget.Material3.Button.TonalButton" android:text="0" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btnDot" style="@style/Widget.Material3.Button.TonalButton" android:text="." android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
            <Button android:id="@+id/btnBack" style="@style/Widget.Material3.Button.TonalButton" android:text="⌫" android:textColor="?attr/colorOnSurface" app:backgroundTint="?attr/colorSurfaceContainerHigh" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="22sp"/>
            <Button android:id="@+id/btnEquals" style="@style/Widget.Material3.Button.UnelevatedButton" android:text="=" android:textColor="?attr/colorOnPrimary" app:backgroundTint="?attr/colorPrimary" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:layout_margin="4dp" android:textSize="28sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>